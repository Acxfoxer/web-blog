<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    <mapper namespace="com.lee.onstage.mapper.ArticleMapper">
    <resultMap id="articleBackVO" type="com.lee.onstage.model.vo.ArticleBackVO">
        <id column="id" property="id"/>
        <result column="article_cover" property="articleCover"/>
        <result column="article_title" property="articleTitle"/>
        <result column="article_type" property="articleType"/>
        <result column="category_name" property="categoryName"/>
        <result column="is_top" property="isTop"/>
        <result column="is_recommend" property="isRecommend"/>
        <result column="is_delete" property="isDelete"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <collection property="tagVOList" ofType="com.lee.onstage.model.vo.TagOptionVO">
            <id column="tag_id" property="id"/>
            <result column="tag_name" property="tagName"/>
        </collection>
    </resultMap>

    <resultMap id="articleHomeVO" type="com.lee.onstage.model.vo.ArticleHomeVO">
        <id column="id" property="id"/>
        <result column="article_cover" property="articleCover"/>
        <result column="article_title" property="articleTitle"/>
        <result column="article_content" property="articleContent"/>
        <result column="is_top" property="isTop"/>
        <result column="create_time" property="createTime"/>
        <association property="category" javaType="com.lee.onstage.model.vo.CategoryOptionVO">
            <id column="category_id" property="id"/>
            <result column="category_name" property="categoryName"/>
        </association>
        <collection property="tagVOList" ofType="com.lee.onstage.model.vo.TagOptionVO">
            <id column="tag_id" property="id"/>
            <result column="tag_name" property="tagName"/>
        </collection>
    </resultMap>

    <resultMap id="articleVO" type="com.lee.onstage.model.vo.ArticleVO">
        <id column="id" property="id"/>
        <result column="article_cover" property="articleCover"/>
        <result column="article_title" property="articleTitle"/>
        <result column="article_content" property="articleContent"/>
        <result column="article_type" property="articleType"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <association property="category" javaType="com.lee.onstage.model.vo.CategoryOptionVO">
            <id column="category_id" property="id"/>
            <result column="category_name" property="categoryName"/>
        </association>
        <collection property="tagVOList" ofType="com.lee.onstage.model.vo.TagOptionVO">
            <id column="tag_id" property="id"/>
            <result column="tag_name" property="tagName"/>
        </collection>
    </resultMap>

    <resultMap id="articleConditionVO" type="com.lee.onstage.model.vo.ArticleConditionVO">
        <id column="id" property="id"/>
        <result column="article_cover" property="articleCover"/>
        <result column="article_title" property="articleTitle"/>
        <result column="create_time" property="createTime"/>
        <association property="category" javaType="com.lee.onstage.model.vo.CategoryOptionVO">
            <id column="category_id" property="id"/>
            <result column="category_name" property="categoryName"/>
        </association>
        <collection property="tagVOList" ofType="com.lee.onstage.model.vo.TagOptionVO">
            <id column="tag_id" property="id"/>
            <result column="tag_name" property="tagName"/>
        </collection>
    </resultMap>

    <select id="getPageList" resultMap="articleBackVO" parameterType="com.lee.onstage.model.dto.PageParamDto">
        SELECT a.id,
        a.article_cover,
        a.category_id,
        a.article_title,
        a.article_type,
        a.is_top,
        a.is_recommend,
        a.is_delete,
        a.`status`,
        a.create_time from t_article a
        <where>
            a.is_delete = #{param.isDelete}
            <if test="param.keyword!=null">
                and a.article_title like concat('%',#{param.keyword})
            </if>
            <if test="param.status!=null">
                and a.status=#{param.status}
            </if>
            <if test="param.categoryId!=null">
                and a.categoryId=#{param.categoryId}
            </if>
            <if test="param.tagId!=null">
                and id in(select article_id from t_article_tag where tagId=#{param.tagId})
            </if>
        </where>
    </select>
    

    <select id="selectHotArticle" resultMap="articleBackVO">
        SELECT id,
               article_cover,
               category_id,
               article_title,
               article_type,
               is_top,
               is_recommend,
               is_delete,
               `status`,
               create_time from t_article
    </select>
    <select id="selectAll" resultMap="articleBackVO">
        select * from t_article
    </select>
    <select id="selectByIds" resultType="com.lee.onstage.model.vo.ArticleBackVO">
        SELECT id,
               article_cover,
               category_id,
               article_title,
               article_type,
               is_top,
               is_recommend,
               is_delete,
               `status`,
               create_time from t_article
        <where>
            <if test="ids.size()>0">
                id in
                <foreach item="id" index="index" collection="ids" open="(" separator="," close=")">
                    #{id}
                </foreach>
             </if>
        </where>
    </select>
    <select id="selectArticleStatistics" resultType="com.lee.onstage.model.vo.ArticleStatisticsVO">
        SELECT DATE_FORMAT(create_time, "%Y-%m-%d") AS date,
            COUNT(*)                             AS count
        FROM t_article
        GROUP BY date
        ORDER BY date DESC
    </select>
    <select id="selectArticleHomeList" resultMap="articleHomeVO">
        SELECT a.id,
               article_cover,
               article_title,
               SUBSTR(article_content, 1, 500) AS article_content,
               a.create_time,
               a.article_type,
               a.is_top,
               a.category_id,
               category_name,
               t.id                            AS tag_id,
               t.tag_name
        FROM (
                 SELECT id,
                        article_cover,
                        article_title,
                        article_content,
                        article_type,
                        is_top,
                        create_time,
                        category_id
                 FROM t_article
                 WHERE is_delete = 0
                   AND `status` = 1
                 ORDER BY is_top DESC,
                          id DESC LIMIT #{limit}, #{size}
             ) a
                 INNER JOIN t_category c ON a.category_id = c.id
                 INNER JOIN t_article_tag tat ON a.id = tat.article_id
                 INNER JOIN t_tag t ON t.id = tat.tag_id
        ORDER BY a.is_top DESC,
                 a.id DESC
    </select>
    <select id="selectArchiveVO" resultType="com.lee.onstage.model.vo.ArchiveVO">
        select id,article_title,article_cover,create_time from t_article
        limit #{lim it},#{size}
    </select>
    <select id="selectByArticleId" resultType="com.lee.onstage.model.vo.ArticleVO">
        select id,article_cover,article_title,article_content,article_type,view
    </select>
    <select id="selectArticleVO" resultType="com.lee.onstage.model.vo.ArticleVO" resultMap="articleVO">
        SELECT a.*,
               c.category_name,
               t.id AS tag_id,
               t.tag_name
        FROM t_article a
                 INNER JOIN t_category c ON a.category_id = c.id
                 INNER JOIN t_article_tag tat ON a.id = tat.article_id
                 INNER JOIN t_tag t ON tat.tag_id = t.id
        WHERE is_delete = 0
          AND `status` = 1
          AND a.id = #{articleId}
    </select>
    <select id="selectPreArticle" resultType="com.lee.onstage.model.vo.ArticlePaginationVO">
        select id,article_cover,article_title from t_article
        where is_delete = 0 and `status` = 1 and id &lt; #{articleId}
        order by id desc limit 1
    </select>
    <select id="selectPostArticle" resultType="com.lee.onstage.model.vo.ArticlePaginationVO">
        select id,article_cover,article_title from t_article
        where is_delete = 0 and `status` = 1 and id &gt; #{articleId}
        order by id asc limit 1
    </select>
    <select id="listArticleVOByTag" resultType="com.lee.onstage.model.vo.ArticleConditionVO" resultMap="articleConditionVO">
        select  a.id,a.article_cover,a.article_title,a.create_time,tc.id as category_id,
                tc.category_name, tt.id as tag_id, tt.tag_name from t_article a
        inner join t_category tc on tc.id=a.category_id
        inner join t_article_tag tat on tat.article_id=a.id
        inner join t_tag tt on tt.id =tat.tag_id
        <where>
            a.is_delete=0 and `status`=1
            <if test="paramDto.categoryId !=null and paramDto.categoryId !=''">
                and a.category_id=#{paramDto.categoryId}
            </if>
            <if test="paramDto.tagId !=null and paramDto.tagId!=''">
                and tag_id=#{paramDto.tagId}
            </if>
        </where>
        order by a.id desc
        limit #{limit},#{size}
    </select>
</mapper>